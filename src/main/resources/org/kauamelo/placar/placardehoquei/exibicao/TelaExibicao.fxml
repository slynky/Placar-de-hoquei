<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.*?>

<GridPane xmlns="http://javafx.com/javafx/17"
          xmlns:fx="http://javafx.com/fxml"
          fx:controller="org.kauamelo.placar.placardehoquei.exibicao.TelaExibicaoController"
          alignment="CENTER" hgap="30">

    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <columnConstraints>
        <ColumnConstraints halignment="CENTER" hgrow="SOMETIMES" minWidth="10.0" prefWidth="300.0"/>
        <ColumnConstraints halignment="CENTER" hgrow="SOMETIMES" minWidth="10.0" prefWidth="300.0"/>
        <ColumnConstraints halignment="CENTER" hgrow="SOMETIMES" minWidth="10.0" prefWidth="300.0"/>
    </columnConstraints>

    <VBox alignment="CENTER" spacing="15" GridPane.columnIndex="0">
        <Label fx:id="lblTimeA" text="VIKINGS"/>
        <VBox alignment="CENTER" styleClass="caixa-placar">
            <Label fx:id="lblGolsA" text="3" styleClass="texto-digital"/>
        </VBox>
        <HBox alignment="CENTER" spacing="40">
            <Label text="PLAYER"/>
            <Label text="PENALTY"/>
        </HBox>
        <VBox alignment="CENTER" spacing="5">
            <HBox alignment="CENTER" spacing="30">
                <Label fx:id="lblJogadorA1" text="76" styleClass="texto-digital" prefWidth="80" alignment="CENTER"/>
                <Label fx:id="lblTempoA1" text="2:34" styleClass="texto-digital" prefWidth="100" alignment="CENTER"/>
            </HBox>
            <HBox alignment="CENTER" spacing="30">
                <Label fx:id="lblJogadorA2" text="-" styleClass="texto-digital" prefWidth="80" alignment="CENTER"/>
                <Label fx:id="lblTempoA2" text="-" styleClass="texto-digital" prefWidth="100" alignment="CENTER"/>
            </HBox>
        </VBox>
    </VBox>

    <VBox alignment="CENTER" spacing="10" GridPane.columnIndex="1">
        <Label fx:id="lblTempo" text="00:00" styleClass="texto-digital"/>
        <Label text="PERIOD" style="-fx-font-size: 32px;"/>
        <Label fx:id="lblPeriodo" text="1" styleClass="texto-digital"/>
    </VBox>

    <VBox alignment="CENTER" spacing="15" GridPane.columnIndex="2">
        <Label fx:id="lblTimeB" text="WILDCATS"/>
        <VBox alignment="CENTER" styleClass="caixa-placar">
            <Label fx:id="lblGolsB" text="2" styleClass="texto-digital"/>
        </VBox>
        <HBox alignment="CENTER" spacing="40">
            <Label text="PLAYER"/>
            <Label text="PENALTY"/>
        </HBox>
        <VBox alignment="CENTER" spacing="5">
            <HBox alignment="CENTER" spacing="30">
                <Label fx:id="lblJogadorB1" text="84" styleClass="texto-digital" prefWidth="80" alignment="CENTER"/>
                <Label fx:id="lblTempoB1" text="3:23" styleClass="texto-digital" prefWidth="100" alignment="CENTER"/>
            </HBox>
            <HBox alignment="CENTER" spacing="30">
                <Label fx:id="lblJogadorB2" text="52" styleClass="texto-digital" prefWidth="80" alignment="CENTER"/>
                <Label fx:id="lblTempoB2" text="10:00" styleClass="texto-digital" prefWidth="100" alignment="CENTER"/>
            </HBox>
        </VBox>
    </VBox>

</GridPane>